{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "ScriptHost"
    ],
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowJs": true,
    // "declaration": true,
    // "declarationMap": true,
    // "declarationDir": "./typings",
    // "emitDeclarationOnly": true,
    "types": [
    ],
    "typeRoots": [
      "./node_modules/",
      "src/typings/index"
    ],
    "paths": {
      "config/*": ["./src/config/*"],
      "core/*": ["./src/core/*"],
      "typings/*": ["./src/typings/*"],
      "utils/*": ["./src/utils/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
